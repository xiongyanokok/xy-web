    <!-- 定义读写分离数据源, 读写分离数据源实现了DataSource接口, 可直接当做数据源处理 -->
	<rdb:master-slave-data-source id="db_0" master-data-source-ref="db_0_master" slave-data-sources-ref="db_0_slave" />
	<rdb:master-slave-data-source id="db_1" master-data-source-ref="db_1_master" slave-data-sources-ref="db_1_slave" />
	
	<!-- 分库策略 -->
	<rdb:strategy id="databaseStrategy" sharding-columns="user_id" algorithm-expression="db_${user_id.longValue() % 2}_master"/>
	
	<!-- 分表策略 -->
	<!-- algorithm-expression="t_order_${order_id.longValue() % 2}" -->
	<rdb:strategy id="orderTableStrategy" sharding-columns="order_id" algorithm-class="com.xy.web.algorithm.SingleKeyModuloTableShardingAlgorithm"/>
	<rdb:strategy id="orderItemTableStrategy" sharding-columns="order_id" algorithm-class="com.xy.web.algorithm.SingleKeyModuloTableShardingAlgorithm"/>
	
	<!-- 数据源 -->
	<rdb:data-source id="dataSource">
	    <rdb:sharding-rule data-sources="db_0_master,db_1_master">
	        <rdb:table-rules>
	        	<!-- 表规则 --><!-- t_order_${0..1} ==> t_order_0,t_order_1 -->
	            <rdb:table-rule logic-table="t_order" actual-tables="t_order_4m" database-strategy="databaseStrategy" table-strategy="orderTableStrategy"/>
	            <rdb:table-rule logic-table="t_order_item" actual-tables="t_order_item_${0..1}" database-strategy="databaseStrategy" table-strategy="orderItemTableStrategy"/>
	        </rdb:table-rules>
	    </rdb:sharding-rule>
	</rdb:data-source>
	
</beans>